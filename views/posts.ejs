<%- include("partials/header.ejs") %>

<% if(locals.posts){%>
    <% for(i = 0; i< posts.length; i++){%>
        <h1><%= posts[i].title %></h1>
        <p><%= posts[i].content %></p>
        
        <h4><%= posts[i].author %> - (<%= posts[i].date %>)</h4>
    <% } %>
<% }else{ %>
    <h1>No posts</h1>
<% } %>

